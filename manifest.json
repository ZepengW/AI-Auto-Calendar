{
  "manifest_version": 3,
  "name": "AI Auto Calendar",
  "description": "一体化的非结构化信息抓取-解析-同步日历插件：支持通过 HTTP 自动获取日程、调用大模型或 JSON 映射进行结构化解析，并将事件同步到多种日历服务器（如 Radicale、Google 日历）。",
  "version": "0.1.0",
  "icons": {"16":"icons/icon.png","48":"icons/icon.png","128":"icons/icon.png"},
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://calendar.sjtu.edu.cn/*",
    "https://my.sjtu.edu.cn/*",
    "http://127.0.0.1:5232/*",
    "http://localhost:5232/*",
    "https://open.bigmodel.cn/*"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://my.sjtu.edu.cn/ui/calendar*",
        "*://my.sjtu.edu.cn/*",
        "*://calendar.sjtu.edu.cn/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {"service_worker": "src/background.js", "type":"module"},
  "options_page": "options.html",
  "action": { "default_title": "AI Auto Calendar", "default_popup": "popup.html" }
  ,"commands": {
    "parse-selection": {
      "suggested_key": { "default": "Ctrl+Shift+P" },
      "description": "解析当前页面选中文本"
    },
    "sync-now": {
      "suggested_key": { "default": "Ctrl+Shift+R" },
      "description": "立即执行一次同步"
    }
  }
}
